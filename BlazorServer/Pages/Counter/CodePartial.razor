@page "/codepartial"
<!--url with parameter-->
@page "/codepartial/{valuecount:int}"

<h1>Code partial</h1>

<p>Current count: @currentCount</p>

<button class="btn btn-primary" @onclick="IncrementCount">Click me</button>
<br />
<br />
<input @bind="valEnter" type="number" style="padding: 15px" /> @valEnter
<br />
<br />
<input @bind="dateEnter" 
        @bind:format="dd/MM/yyyy"
       type="datetime-local" placeholder="dd/MM/yyyy" style="padding: 15px" /> @dateEnter



